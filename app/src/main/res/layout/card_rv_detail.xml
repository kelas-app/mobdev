<?xml version="1.0" encoding="utf-8"?>
<!--untuk menggunakan card view-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="133dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/detailkursi"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_md_bt"
            android:text="Kualitas sesuai gambar"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            card_view:layout_constraintStart_toStartOf="@+id/img_item_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/img_item_photo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_seller"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            card_view:layout_constraintStart_toStartOf="@+id/title"
            card_view:layout_constraintTop_toBottomOf="@+id/title"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/name_reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_md_bt"
            tools:text="Pamelo Anderson"
            android:textStyle="bold"
            android:textSize="8sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_seller"
            card_view:layout_constraintEnd_toEndOf="@+id/title"
            card_view:layout_constraintStart_toEndOf="@+id/img_seller"
            card_view:layout_constraintTop_toTopOf="@+id/img_seller" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:text="@string/star"
            android:textSize="8sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/title"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/img_item_photo" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>