<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/C2"
            android:layout_margin="12dp"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMenjadiPenjual"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvFirstNameLabel"
                style="@style/Bd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="@string/firstname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFirstName"
                style="@style/Bd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/firstname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFirstNameLabel" />

            <TextView
                android:id="@+id/tvLastNameLabel"
                style="@style/Bd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/lastname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFirstName" />

            <TextView
                android:id="@+id/tvLastName"
                style="@style/Bd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/lastname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLastNameLabel" />

            <TextView
                android:id="@+id/tvUsernameLabel"
                style="@style/Bd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/username"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLastName" />

            <TextView
                android:id="@+id/tvUsername"
                style="@style/Bd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/username"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUsernameLabel" />

            <TextView
                android:id="@+id/tvPhoneNumberLabel"
                style="@style/Bd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/phonenumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                style="@style/Bd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/phonenumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberLabel" />

            <TextView
                android:id="@+id/tvAddressLabel"
                style="@style/Bd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/Bd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddressLabel" />

            <TextView
                style="@style/Bd1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alamat"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/small_rounded_shape"
                android:backgroundTint="@color/C2"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="137dp"
                    android:layout_height="63dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/small_rounded_shape"
                    android:src="@drawable/pic_map" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="Jl. Nologaten, Ngaglik, Yogyakarta, Indonesia 55581" />

                    <Button
                        android:id="@+id/btnBukaMaps"
                        style="@style/Bd1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/P1"
                        android:paddingVertical="8dp"
                        android:text="@string/OpenGoogleMaps"
                        android:textColor="@color/black"
                        app:cornerRadius="24dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibSetting"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/setting_icon"
            android:layout_marginTop="16dp"
            android:elevation="3dp"
            android:src="@drawable/ic_setting"
            android:backgroundTint="@color/C6"
            android:background="@drawable/circle_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/top_navigation"/>

        <LinearLayout
            android:id="@+id/top_navigation"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="@color/black"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewProfil"
                style="@style/H2"
                android:layout_height="77dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/profile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_width="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/C7"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="@+id/top_navigation"
            tools:layout_editor_absoluteX="12dp">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_shape"
                android:contentDescription="@string/profilepicture"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_profil" />

            <TextView
                android:id="@+id/textViewUsername"
                style="@style/H2"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/ProfileUsername"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/btnMenjadiPenjual"
            style="@style/H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/P1"
            android:padding="12dp"
            android:text="@string/menjadi_penjual"
            android:textColor="@color/black"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
