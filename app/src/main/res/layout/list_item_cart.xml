<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:layout_marginHorizontal="16dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_shape"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    android:outlineAmbientShadowColor="@color/C6"
    android:outlineSpotShadowColor="@color/C6">

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/procduct_image"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_product_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tvProductTitle"
            style="@style/Bd3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/product_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvProductPrice"
            style="@style/H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/harga"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        style="@style/Bd1"
        android:id="@+id/tvStatus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/C6"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="@string/in_stock"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/C4"
        android:padding="4dp"
        android:src="@drawable/ic_remove"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/remove_item" />
</LinearLayout>
